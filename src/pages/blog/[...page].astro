import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';
import StarlightPage from '@astrojs/starlight/components/StarlightPage.astro';

export const getStaticPaths = (async ({ paginate }) => {
  const allPosts = await getCollection('docs', ({ id }) => id.startsWith('blog/') && id !== 'blog/index.mdx');

  // Sort by date (newest first)
  const sortedPosts = allPosts.sort((a, b) => {
    const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
    const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
    return dateB - dateA;
  });

  // 6 posts per page
  return paginate(sortedPosts, { pageSize: 6 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const currentPage = page.currentPage;
const totalPages = page.lastPage;

// Get all posts for featured section (only on first page)
const allPosts = await getCollection('docs', ({ id }) => id.startsWith('blog/') && id !== 'blog/index.mdx');
const sortedAllPosts = allPosts.sort((a, b) => {
  const dateA = a.data.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA;
});
const featuredPosts = sortedAllPosts.filter(post => post.data.featured);

// Format date helper
function formatDate(date: Date | undefined): string {
  if (!date) return '';
  return new Intl.DateTimeFormat('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  }).format(new Date(date));
}

// Get post URL
function getPostUrl(id: string): string {
  return '/' + id.replace(/\.(mdx?|md)$/, '/');
}

// Get cover image source
function getCoverSrc(cover: any): string | null {
  if (!cover) return null;
  if (typeof cover === 'string') return cover;

  const imgSource = cover.src || cover.image;
  if (imgSource) {
    if (typeof imgSource === 'object' && imgSource.src) {
      return imgSource.src;
    }
    return imgSource;
  }
  return null;
}

// Generate page URL
function getPageUrl(pageNum: number): string {
  if (pageNum === 1) return '/blog/';
  return `/blog/${pageNum}/`;
}

// Generate page numbers to show
function getPageNumbers(current: number, total: number): (number | string)[] {
  if (total <= 7) {
    return Array.from({ length: total }, (_, i) => i + 1);
  }

  const pages: (number | string)[] = [];

  if (current <= 3) {
    pages.push(1, 2, 3, 4, '...', total);
  } else if (current >= total - 2) {
    pages.push(1, '...', total - 3, total - 2, total - 1, total);
  } else {
    pages.push(1, '...', current - 1, current, current + 1, '...', total);
  }

  return pages;
}

const pageNumbers = getPageNumbers(currentPage, totalPages);
---

<StarlightPage
  frontmatter={{
    title: 'Blog',
    description: 'Latest posts, guides, and updates from ScaleNinja',
    template: 'splash',
  }}
>
  <!-- Hero Section with Featured Posts (only on first page) -->
  {currentPage === 1 && (
    <div class="blog-hero">
      <div class="blog-hero-content">
        <h1 class="blog-hero-title">Blog</h1>
        <p class="blog-hero-tagline">Insights, guides, and updates on cloud infrastructure, DevOps, and scaling technologies.</p>
      </div>

      {featuredPosts.length > 0 && (
        <div class="featured-posts-grid">
          {featuredPosts.map((post) => {
            const coverSrc = getCoverSrc(post.data.cover);
            return (
              <a href={getPostUrl(post.id)} class="featured-card">
                {coverSrc && (
                  <div class="featured-card-image">
                    <img src={coverSrc} alt={post.data.cover?.alt || post.data.title} />
                  </div>
                )}
                <div class="featured-card-content">
                  <span class="featured-badge">Featured</span>
                  <h2 class="featured-card-title">{post.data.title}</h2>
                  {post.data.description && (
                    <p class="featured-card-description">{post.data.description}</p>
                  )}
                  <div class="featured-card-meta">
                    {post.data.date && (
                      <time datetime={new Date(post.data.date).toISOString()}>
                        {formatDate(post.data.date)}
                      </time>
                    )}
                  </div>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="featured-card-tags">
                      {post.data.tags.slice(0, 3).map((tag: string) => (
                        <span class="card-tag">{tag}</span>
                      ))}
                    </div>
                  )}
                </div>
              </a>
            );
          })}
        </div>
      )}
    </div>
  )}

  <!-- All Posts Section -->
  <section class="all-posts-section">
    <div class="section-header">
      <h2 class="section-title">{currentPage === 1 ? 'All Posts' : `All Posts - Page ${currentPage}`}</h2>
      <p class="section-meta">
        Showing {page.start + 1}-{page.end + 1} of {page.total} posts
      </p>
    </div>
    <div class="blog-cards-container">
      {page.data.map((post) => {
        const coverSrc = getCoverSrc(post.data.cover);
        return (
          <a href={getPostUrl(post.id)} class="blog-card">
            {coverSrc && (
              <div class="blog-card-image">
                <img src={coverSrc} alt={post.data.cover?.alt || post.data.title} />
              </div>
            )}
            <div class="blog-card-content">
              <div class="blog-card-meta">
                {post.data.date && (
                  <time datetime={new Date(post.data.date).toISOString()}>
                    {formatDate(post.data.date)}
                  </time>
                )}
                {post.data.featured && (
                  <span class="featured-indicator">Featured</span>
                )}
              </div>
              <h3 class="blog-card-title">{post.data.title}</h3>
              {post.data.description && (
                <p class="blog-card-description">{post.data.description}</p>
              )}
              {post.data.tags && post.data.tags.length > 0 && (
                <div class="blog-card-tags">
                  {post.data.tags.map((tag: string) => (
                    <span class="card-tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
            <div class="blog-card-arrow">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </div>
          </a>
        );
      })}
    </div>

    <!-- Pagination -->
    {totalPages > 1 && (
      <nav class="pagination" aria-label="Blog pagination">
        <a
          href={page.url.prev || '#'}
          class={`pagination-btn pagination-prev ${!page.url.prev ? 'disabled' : ''}`}
          aria-disabled={!page.url.prev}
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 18l-6-6 6-6"/>
          </svg>
          Previous
        </a>

        <div class="pagination-pages">
          {pageNumbers.map((pageNum) => (
            pageNum === '...' ? (
              <span class="pagination-ellipsis">...</span>
            ) : (
              <a
                href={getPageUrl(pageNum as number)}
                class={`pagination-page ${pageNum === currentPage ? 'active' : ''}`}
                aria-current={pageNum === currentPage ? 'page' : undefined}
              >
                {pageNum}
              </a>
            )
          ))}
        </div>

        <a
          href={page.url.next || '#'}
          class={`pagination-btn pagination-next ${!page.url.next ? 'disabled' : ''}`}
          aria-disabled={!page.url.next}
        >
          Next
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M9 18l6-6-6-6"/>
          </svg>
        </a>
      </nav>
    )}
  </section>
</StarlightPage>

